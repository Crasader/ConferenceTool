.Pop_up_layer{
    background-color: rgba(0, 0, 0, 0.8);
    position: fixed;
    z-index: 10;
    width: 100%;
    height: 100%;
    min-height: 100%;
    top: 0;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    display: none;
}
.Pop_up_cont{
  width:453rpx;
  height:194rpx;
  background:url("http://www.dhfjob.com/ycc/mini/layer_bj.png");
  background-size: cover;
  display: flex;
  align-items: center;
  position: relative;
  margin:0 auto;
  text-shadow: 0 0.5px #2b9c5f, 0.5px 0 #2b9c5f, -0.5px 0 #2b9c5f, 0 -0.5px #2b9c5f;
  color:#fff;
  font-size: 40rpx;
}

.close{

  width:47rpx;
  height:47rpx;
  position: absolute;
  left:30rpx;
  top:-15rpx;
}
.close image{
width:100%;
  display: block;
height: 100%;
z-index: 99;
}
.chose_ico{
  width:43rpx;
